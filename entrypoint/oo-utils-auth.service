[Service]
ExecStart=/usr/local/share/oo/utils-auth/app.js
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=oo-utils-auth
User=www-data
Group=www-data
RuntimeDirectory=oosocks
Environment=NODE_ENV=production
Restart=always

[Unit]
After=mongodb.service,"mnt-oo\x2dblock2.mount"
Requires=mongodb.service,"mnt-oo\x2dblock2.mount"

[Install]
WantedBy=multi-user.target
