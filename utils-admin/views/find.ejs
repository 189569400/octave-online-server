<%- include("partials/header"); -%>

<% if (docs.length === 0) { %>
<p><em>No documents found!</em></p>
<% } else { %>
<h2>Query Results</h2>
<% for (let doc of docs) { %>
<hr/>
<pre style="white-space: pre-wrap;"><%= JSON.stringify(doc, null, 2) %></pre>
<% } %>
<hr/>
<% } %>

<form action="/find/" class="pure-form">
	<p>
		<input type="text" name="collection" placeholder="collection name" value="<%= query.collection %>" />
	</p>
	<p>
		<textarea name="mq" class="pure-input-1" placeholder="query"><%= query.mq %></textarea>
	</p>
	<p>
		<input type="submit" class="pure-button" value="Search Again" />
	</p>
</form>

<%- include("partials/footer"); -%>
